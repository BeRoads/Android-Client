<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:layout_width="0dip" android:layout_weight="1"
			android:layout_height="wrap_content" android:id="@+id/tv_name"
			android:text="Station" android:textColor="@color/darkblue"
			android:textStyle="bold" />
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/ivExpress"/>

	</LinearLayout>

	<TextView android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:text="XXXXm" android:id="@+id/tv_dis"
		android:textColor="@color/darkblue" android:layout_marginBottom="2dip" />

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/tv_adress"
		android:text="xxxxxxxx" android:textColor="@color/darkblue"
		android:textSize="11sp" />

</LinearLayout>
